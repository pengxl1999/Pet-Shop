<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pengxl.petshop">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/pet_shop_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/pet_shop_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".LoginActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name=".AddPetActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name=".SearchPetActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name=".ShowResultActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name=".ChangeActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name=".ChangeSearchActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name=".DeleteSearchActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name=".SignUpActivity"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>